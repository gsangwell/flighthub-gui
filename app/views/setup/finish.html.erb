<% content_for(:title) { 'Appliance Setup' } %>

<div class="setup-body">
<%= image_tag 'square-logo.png', size: '200x200', class: 'mt-4' %>
  <h1><%= Rails.application.config.application_name %> Appliance</h1>
  <br>
  <div>
    <div class="row center mt-3" style="width: 90%;">
      <div class="col">
        <%= form_for(:setup_network, url: setup_finish_path, html: { id: 'setup_network', class: 'styled-form', style: 'width: 35%'}) do |f| %>
          <div class="row center">
            <div class="col">
              <div class="row">
                <h2>Step 3: Restart Appliance</h2>
              </div>
              <div class="row text-left">
                <h6>Restart the appliance to complete the setup process. You will need to reconnect to the appliance on the new network settings once this is complete.</h6>
              </div>
            </div>
          </div> 
          <hr>
          <div class="row center">
            <div class="col">
              <%= f.submit 'Restart', class: 'btn btn-primary mt-2' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
